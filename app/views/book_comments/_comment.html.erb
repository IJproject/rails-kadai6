<table class='table'>
  <% comments.each do |comment| %>
    <% if book.id == comment.book_id %>
      <tr>
        <td>
          <%= link_to(comment.user) do %>
            <%= image_tag comment.user.get_profile_image, size:"80x80" %><br>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <% if comment.user == current_user %>
          <td><%= link_to "destroy",book_book_comment_path(book, comment), remote: true, method: :delete, class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>
<div>
  <%= form_with model:[book, comment], local: false do |f|%>
    <div class="form-group">
      <%= f.text_area :comment, class: 'form-control sentence' %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
